#!/usr/bin/perl

use strict;
use warnings;

my $fn = 'align_util.pm';

foreach my $fn (@ARGV) {
	print_indent_problems($fn);
}


sub print_indent_problems {
	my $fn = shift;
	open FILE, "<$fn" or die $!;
	
	my $line_count = 0;
	my $indent_level_wanted = 0;
	LINE: while ( my $line = <FILE> ) {
		$line_count++;
		chomp $line;
	
		if ( $line =~ /^\s*$/ ) { next LINE; }
		if ( $line =~ /^(\s+)/ ) {
			my $space = $1;
			if ( $space =~ / / && $space =~ /\t/ ) {
				print join ' ', ( "$line_count:", $line );
				print "\n";
			}
		}
	}

	close FILE or die $!;
}
