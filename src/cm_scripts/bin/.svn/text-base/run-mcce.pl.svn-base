#!/usr/bin/perl

use strict;
use warnings;

use lib '/work/tex/src/cm_scripts/perl_lib';
use File::Copy;
use File::Path;
use File::Basename;
use Getopt::Long;
use Rosetta::Job;
use Rosetta::Util;

my $options = {};
$options->{pdbfile} = 0;
$options->{working_dir} = 0;
$options->{scratch_dir} = assemble_path( '/scratch', 'USERS', $ENV{USER} );
&GetOptions(
	$options,
	'pdbfile=s',
	'working_dir=s',
	'scratch_dir=s',
);

if ( ! -f $options->{pdbfile} ) {
	die "Error: need valid -pdbfile! (given $options->{pdbfile} )";
}

if ( !$options->{working_dir} ) {
	my $id = basename( $options->{pdbfile}, '.pdb' );
	$options->{working_dir} = $id;
}

if ( -d $options->{working_dir} ) {
	die "Error: not overwriting directory $options->{working_dir}!\n";
}

mkpath $options->{working_dir};
copy( $options->{pdbfile}, $options->{working_dir} );

# set up options
my $prm_str = get_run_prm( $options );
print_to_file( assemble_path( $options->{working_dir}, "run.prm" ), $prm_str );

# run mcce
my $job = Rosetta::Job->new(
	executable => '/work/yfsong/bin/mcce/mcce2.4.4/bin/mcce',
	args       => '',
	results_file => 'entropy.out',
	dir => $options->{working_dir} ,
	lockfile => 'mcce.lock',
);
$job->run_with_message( "running mcce in $options->{working_dir}" );
# extract data
# zopp expands the energies.opp binary file into a text file, energies is
# the output directory for zopp.
system( "cd $options->{working_dir}; /work/yfsong/bin/mcce/mcce2.4.4/bin/zopp -x energies" );
# count looks at microstates, finds the lowest energy microstate for each
# individual amino acid, and reports electrostatic energies into elec.txt
system( "cd $options->{working_dir}; /work/yfsong/bin/mcce++/tools/count > elec.txt" );

# done!

